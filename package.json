{
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "dev": "cd ./playground/vue && vite --host --force",
    "type-check": "tsx scripts/type-check.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx tsx scripts/verify-commit.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,less,scss}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript-eslint": "^8.18.2",
    "typescript": "~5.7.2",
    "eslint": "^9.17.0",
    "simple-git-hooks": "^2.11.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "vite": "^6.0.6",
    "chalk": "^5.4.1",
    "fs-extra": "^11.2.0",
    "execa": "^9.5.2",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1",
    "semver": "^7.6.3",
    "inquirer": "^12.3.0",
    "eslint-plugin-import-x": "^4.6.1",
    "@eslint/js": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "vue-eslint-parser": "^9.4.3",
    "eslint-plugin-vue": "^9.32.0",
    "tsx": "^4.19.2"
  }
}
